<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".Menu_">

    <ImageView
        android:id="@+id/header"
        android:layout_width="413dp"
        android:layout_height="199dp"
        android:background="@drawable/custom_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/menu_title"
        android:layout_width="168dp"
        android:layout_height="67dp"
        android:layout_marginTop="32dp"
        android:fontFamily="cursive"
        android:text="Menu"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/black"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/header" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/menu_title"
        app:layout_constraintTop_toTopOf="@+id/menu_title"
        app:srcCompat="@drawable/paperclip" />

    <ImageView
        android:id="@+id/backbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/menu_title"
        app:layout_constraintHorizontal_bias="0.179"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/menu_title"
        app:srcCompat="@drawable/back_button" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="416dp"
        android:layout_height="46dp"
        android:layout_marginBottom="8dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="@+id/header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <Button
                android:id="@+id/orektika"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/actor"
                android:text="ΟΡΕΚΤΙΚΑ"
                android:textAllCaps="false"
                app:cornerRadius="500dp" />

            <Button
                android:id="@+id/kurios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/actor"
                android:text="ΚΥΡΙΩΣ"
                android:textAllCaps="false"
                app:cornerRadius="500dp" />

            <Button
                android:id="@+id/epidorpia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/actor"
                android:text="ΕΠΙΔΟΡΠΙΑ"
                android:textAllCaps="false"
                app:cornerRadius="500dp" />

            <Button
                android:id="@+id/anapsikitka"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/actor"
                android:text="ΑΝΑΨΥΚΤΙΚΑ"
                android:textAllCaps="false"
                app:cornerRadius="500dp" />


        </LinearLayout>

    </HorizontalScrollView>

    <ScrollView
        android:layout_width="396dp"
        android:layout_height="536dp"
        android:layout_marginTop="55dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/horizontalScrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="bottom|center_horizontal"
                android:text=" ΟΡΕΚΤΙΚΑ"
                android:textAllCaps="true"
                android:textSize="24sp"
                android:textStyle="bold|italic" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/xwriatiki" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="194dp"
                    android:layout_height="54dp"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:text="ΧΩΡΙΑΤΙΚΗ"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="90dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center|right"
                    android:gravity="center_horizontal"
                    android:text="5.50€"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/add"
                    android:layout_width="183dp"
                    android:layout_height="36dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="@color/black"
                    android:fontFamily="@font/actor"
                    android:text="ΠΡΟΣΘΗΚΗ"
                    android:textAllCaps="false"
                    app:cornerRadius="500dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="166dp">

                <Button
                    android:id="@+id/add2"
                    android:layout_width="183dp"
                    android:layout_height="36dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="@color/black"
                    android:fontFamily="@font/actor"
                    android:text="ΠΡΟΣΘΗΚΗ"
                    android:textAllCaps="false"
                    app:cornerRadius="500dp" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="90dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center|right"
                    android:gravity="center_horizontal"
                    android:text="3,00€"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="194dp"
                    android:layout_height="54dp"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:text="ΦΕΤΑ"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold|italic" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/feta" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="162dp">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="90dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center|right"
                    android:gravity="center_horizontal"
                    android:text="4,50€"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="194dp"
                    android:layout_height="54dp"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:text="ΦΕΤΑ ΡΑΒΑΣΑΚΙ"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold|italic" />

                <Button
                    android:id="@+id/add4"
                    android:layout_width="183dp"
                    android:layout_height="36dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="@color/black"
                    android:fontFamily="@font/actor"
                    android:text="ΠΡΟΣΘΗΚΗ"
                    android:textAllCaps="false"
                    app:cornerRadius="500dp" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/fetameli" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="161dp">

                <Button
                    android:id="@+id/add5"
                    android:layout_width="183dp"
                    android:layout_height="36dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="@color/black"
                    android:fontFamily="@font/actor"
                    android:text="ΠΡΟΣΘΗΚΗ"
                    android:textAllCaps="false"
                    app:cornerRadius="500dp" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="90dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center|right"
                    android:gravity="center_horizontal"
                    android:text="3,00€"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="194dp"
                    android:layout_height="54dp"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:text="ΤΖΑΤΖΙΚΙ"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold|italic" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="195dp"
                    android:layout_height="161dp"
                    app:srcCompat="@drawable/tzatziki" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:gravity="bottom|center_horizontal"
                android:text="ΚΥΡΙΩΣ"
                android:textSize="24sp"
                android:textStyle="bold|italic" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="163dp">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/fileto" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="156dp">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/mprizola" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>