<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_1_"
    tools:context=".Staff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:orientation="vertical">

            <Button
                android:id="@+id/Staff1"
                android:layout_width="153dp"
                android:layout_height="153dp"
                android:layout_gravity="center"
                android:background="@drawable/card"
                android:clickable="true"
                app:backgroundTint="#000000" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="@string/staff_1"
                android:textSize="36sp" />

            <Button
                android:id="@+id/Staff2"
                android:layout_width="155dp"
                android:layout_height="151dp"
                android:layout_gravity="center"
                android:background="@drawable/card"
                android:clickable="true"
                app:backgroundTint="#000000" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="@string/staff_2"
                android:textSize="36sp" />

            <Button
                android:id="@+id/Staff3"
                android:layout_width="155dp"
                android:layout_height="151dp"
                android:layout_gravity="center"
                android:background="@drawable/card"
                android:clickable="true"
                app:backgroundTint="#000000" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:text="@string/staff_3"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="36sp" />

            <Button
                android:id="@+id/Staff4"
                android:layout_width="155dp"
                android:layout_height="151dp"
                android:layout_gravity="center"
                android:background="@drawable/card"
                android:clickable="true"
                app:backgroundTint="#000000" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:text="@string/staff_4"
                android:textAlignment="center"
                android:textSize="36sp" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>