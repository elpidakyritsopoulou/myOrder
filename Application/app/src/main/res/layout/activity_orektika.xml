<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4742A"
    tools:context=".orekt">

    <Button
        android:id="@+id/button3"
        android:layout_width="233dp"
        android:layout_height="96dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/fetameli"
        android:text="ΦΕΤΑ ΜΕ ΜΕΛΙ"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:backgroundTint="#00D81515"
        app:backgroundTintMode="add"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:rippleColor="#F8F2F2" />

    <Button
        android:id="@+id/button4"
        android:layout_width="233dp"
        android:layout_height="96dp"
        android:background="@drawable/feta"
        android:text="ΦΕΤΑ"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:backgroundTint="#00D81515"
        app:backgroundTintMode="add"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.732" />

    <Button
        android:id="@+id/button5"
        android:layout_width="233dp"
        android:layout_height="96dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/xwriatiki"
        android:text="ΧΩΡΙΑΤΙΚΗ"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:backgroundTint="#00D81515"
        app:backgroundTintMode="add"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button"
        android:layout_width="233dp"
        android:layout_height="96dp"
        android:background="@drawable/tzatziki"
        android:text="ΤΖΑΤΖΙΚΙ"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:backgroundTint="#00D81515"
        app:backgroundTintMode="add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.811" />

    <Button
        android:id="@+id/button6"
        android:layout_width="58dp"
        android:layout_height="53dp"
        android:background="@drawable/home"
        app:backgroundTint="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="53dp"
        android:layout_height="56dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/back_button"
        app:backgroundTint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>